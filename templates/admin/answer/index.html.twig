{% extends 'admin/base_data.html.twig' %}

{% block body %}
        <div class="row">
            <div class="col s12">
                <h1>Answers list</h1>

                <table>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Value</th>
                        <th>Good</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for answer in answers %}
                        <tr>
                            <td><a href="{{ path('answer_show', { 'id': answer.id }) }}">{{ answer.id }}</a></td>
                            <td>{{ answer.value }}</td>
                            <td>{% if answer.good %}Yes{% else %}No{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('answer_show', { 'id': answer.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('answer_edit', { 'id': answer.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('answer_new') }}">Create a new answer</a>
                    </li>
                </ul>

            </div>
        </div>
{% endblock %}
