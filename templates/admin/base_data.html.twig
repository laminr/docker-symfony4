{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/admin.css") }}?v={{ version }}" type="text/css">
{% endblock %}

{% block bodyContainer %}
    <div class="row">

        <div class="col s12 l3"> <!-- Note that "m4 l3" was added -->
            <!-- Grey navigation panel

                  This content will be:
              3-columns-wide on large screens,
              4-columns-wide on medium screens,
              12-columns-wide on small screens  -->
            <div>
                <h2 id="admin-username">
                    {{ 'home.sign.logged' | trans({'%username%': app.user.username}) }}
                </h2>
            </div>
            <div>
                <ul class="collection">
                    <li class="collection-item"><a href="{{ path('source_index') }}">Source</a></li>
                    <li class="collection-item"><a href="{{ path('subject_index') }}">Subject</a></li>
                    <li class="collection-item"><a href="{{ path('topic_index') }}">Topic</a></li>
                    <li class="collection-item"><a href="{{ path('_admin-question_index') }}">Question</a></li>
                </ul>
            </div>
            <div>
                <a href="{{ path('_homepage') }}">
                    <i class="material-icons small left">home</i> Back to home
                </a>
            </div>
        </div>

        <div class="col s12 l9"> <!-- Note that "m8 l9" was added -->
            <!-- Teal page content

                  This content will be:
              9-columns-wide on large screens,
              8-columns-wide on medium screens,
              12-columns-wide on small screens  -->
            {% block body %}{% endblock %}
        </div>

    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}