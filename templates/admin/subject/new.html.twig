{% extends 'admin/base_data.html.twig' %}

{% block body %}
        <div class="row">
            <div class="col s12">

                <h1>Subject creation</h1>

                {{ form_start(form) }}

                {{ form_row(form.source) }}
                {{ form_row(form.name) }}
                <div class="switch">
                    <label>
                        Private
                        {{ form_widget(form.public) }}
                        <span class="lever"></span>
                        Public
                    </label>
                </div>
                {{ form_row(form.authorisedUsers) }}

                {% if not is_granted('ROLE_SUPER_ADMIN') %}
                    {% do form.authorisedAdmins.setRendered %}
                {% endif %}

                <input type="submit" value="Create" class="btn right" />
                {{ form_end(form) }}

                <a href="{{ path('subject_index') }}" class="btn left">Back to the list</a>
            </div>
        </div>
{% endblock %}
